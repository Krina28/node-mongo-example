extends layout/layout.pug

block subject
    | activate_your_account

block content

    p Hi #{userDetails.first_name} #{userDetails.last_name}

    p Welcome to P2P.

    p You are about to activate your account.

    p Please click the button below to verify   

    <a href="#{SITE_URL}login?token=#{userDetails.p2p_verification_token}" target="_blank" style='text-decoration: none;width: 100%;font-family: "DINRoundPro-Bold";font-size: 12px;color: #FFFFFF;background-color: #3F51B5;letter-spacing: 2px;border-radius: 13px;-webkit-box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.45);padding:5px;cursor: pointer;'>Verify Account</a>

    p Thank you for joining with us.

    p Regards, 
    
    p #{PRODUCT_NAME}

