extends layout/layout.pug

block subject
    | forgot_password

block content
    
    p Hi #{userDetails.first_name} #{userDetails.last_name}

    p A password reset event has been triggered.

    p No worries it happens. Simply click the following link to choose a new one. It's as easy as that.
    <a href="#{SITE_URL}reset-password?token=#{userDetails.p2p_forgot_password_token}" target="_blank" style='text-decoration: none;width: 100%;font-family: "DINRoundPro-Bold";font-size: 12px;color: #FFFFFF;background-color: #3F51B5;letter-spacing: 2px;border-radius: 13px;-webkit-box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.45);padding:5px;cursor: pointer;'>Reset Password</a>

    p Regards, 

    p #{PRODUCT_NAME}

